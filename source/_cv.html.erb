<script>
  $('#trigger-back').click(function() {
    $('.content-base').css('z-index', -1);
    $('.wrapper-btn').css('z-index', 0)
  });

  function expandCard(id) {
   $(id + ' > .container-btn > .btn-expand').click(function() {
      var btnClass = $(id + ' > .container-btn > i').attr('class').includes('up');
      if(btnClass) {
        $(id + ' > .job-details').css('height', '0px');
        $(id + ' > .job-details').css('visibility', 'hidden');
        $(id + ' > .card-job').css('height', 'auto');
        $(id + ' > .container-btn > .btn-expand').css('transform', 'rotate(0deg)');
        $(this).removeClass('up');
      } else {
        $(id + ' > .container-btn > .btn-expand').css('transform', 'rotate(180deg)');
        $(id + ' > .job-details').css('visibility', 'initial');
        $(id + ' > .job-details').css('height', 'auto');
        $(id + ' > .card-job').css('height', 'auto');
        $(this).addClass('up');
      }
    })
  };

  expandCard('#ga');
  expandCard('#ps');
  expandCard('#calarts');

  $(".button-collapse").sideNav();
</script>
