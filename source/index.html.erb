<div class="row override-row">
  <%= partial 'user' %>
  <div class="content-container col l7 m6 s12">
    <div class="polygon"></div>
    <div class="polygon-2"></div>
    <div class="polygon-3"></div>
    <div class="wrapper-btn">
      <div class="btn-main" id="projects">
        <h6>
          <i class="fa fa-folder-open" aria-hidden="true"></i>
          Projects
        </h6>
      </div>
      <div class="btn-main" id="cv">
        <h6>
          <i class="fa fa-suitcase" aria-hidden="true"></i>
          CV
        </h6>
      </div>
    </div>
  </div>
  <div class="col l8 m6 s12 content-base rm-padding hidden">
  </div>
</div>

<script>

  $('#projects').click(function () {
    $('.user').removeClass('offset-l1');
    $('.content-container').addClass('hidden');
    $('.content-base').removeClass('hidden');
    $('.content-base').html('<%= escape_javascript(partial 'projects') %>')
  });

  $('#cv').click(function () {
    $('.user').removeClass('offset-l1');
    $('.content-container').addClass('hidden');
    $('.content-base').removeClass('hidden');
    $('.content-base').html('<%= escape_javascript(partial 'cv') %>')
  });

</script>

